<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue"
    android:padding="16dp">

    <ImageView
        android:id="@+id/company_logo"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:scaleType="fitCenter"
        android:src="@drawable/welcome_3" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/company_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Welcome to GSFE Union Setu"
        android:textColor="@color/lightdarkblue"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reg_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Reg.No. : G-547"
        android:textColor="@color/lightdarkblue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/get_started_button"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_no"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button_white"
        android:elevation="4dp"
        android:padding="10dp"
        android:text="Get Started"
        android:textColor="@color/lightdarkblue"
        android:textSize="25sp"
        android:textStyle="bold" />
</RelativeLayout>
